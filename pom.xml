<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0">
  <modelVersion>4.0.0</modelVersion>
  
  <name>Guanxi</name>
  <groupId>org.guanxi</groupId>
  <artifactId>guanxi-core</artifactId>
  <packaging>pom</packaging>
  <version>2.0.0</version>

  <developers>
    <developer>
      <id>alistairskye</id>
      <name>Alistair Young</name>
      <email>alistair@codebrane.com</email>
      <roles>
        <role>Project Manager</role>
        <role>Architect</role>
      </roles>
      <organization>codeBrane</organization>
      <timezone>0</timezone>
    </developer>
  </developers>

  <issueManagement>
    <system>SourceForge</system>
    <url>http://sourceforge.net/tracker/?group_id=134770</url>
  </issueManagement>
  
  <mailingLists>
    <mailingList>
      <name>Guanxi Development List</name>
      <subscribe>https://lists.sourceforge.net/lists/listinfo/guanxi-development</subscribe>
      <unsubscribe>https://lists.sourceforge.net/lists/listinfo/guanxi-development</unsubscribe>
      <post>guanxi-development@lists.sourceforge.net</post>
      <archive>http://sourceforge.net/mailarchive/forum.php?forum_name=guanxi-development</archive>
    </mailingList>
  </mailingLists>

  <licenses>
    <license>
      <name>MOZILLA PUBLIC LICENSE Version 1.1</name>
      <url>http://www.mozilla.org/MPL/MPL-1.1.html</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <scm>
    <connection>scm:cvs:guanxi.cvs.sourceforge.net:/cvsroot/guanxi</connection>
    <developerConnection>scm:cvs:guanxi.cvs.sourceforge.net:/cvsroot/guanxi</developerConnection>
    <url>http://guanxi.cvs.sourceforge.net</url>
  </scm>
  
  <repositories>
    <repository>
      <id>source.uhi.ac.uk-repository</id>
      <name>UHI Maven 2.x Repository</name>
      <url>http://source.uhi.ac.uk/mvn</url>
      <snapshots>
        <enabled>false</enabled>
        <updatePolicy>always</updatePolicy>
      </snapshots>
    </repository>
  </repositories>

  <reports>
    <report>maven-developer-activity-plugin</report>
    <report>maven-file-activity-plugin</report>
    <report>maven-javadoc-plugin</report>
    <report>maven-surefire-plugin</report>
  </reports>

  <distributionManagement>
    <!--
    <site>
      <id>codebrane-ftp-repository</id> 
      <url>ftp://ftp.codebrane.com</url>
    </site>
    -->

    <repository>
      <id>source.uhi.ac.uk-repository</id>
      <name>UHI Maven2 repository</name>
      <url>http://source.uhi.ac.uk/mvn</url>
    </repository>
  </distributionManagement>

  <build>
    <plugins>
      <plugin>
        <inherited>true</inherited>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>

      <!-- mvn surefire:test -->
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-surefire-plugin</artifactId>
          <version>2.4</version>
        </plugin>
      </plugins>
    </plugins>

    <extensions>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-webdav</artifactId>
        <version>1.0-beta-2</version>
      </extension>

      <extension>
        <groupId>org.apache.maven.wagon</groupId>
         <artifactId>wagon-ftp</artifactId>
         <version>1.0-beta-2</version>
      </extension>
    </extensions>
  </build>

